<h2>
	<%= link_to "new package", new_admin_billing_package_path, class: 'btn btn-sm btn-default pull-right' %>
	Billing Packages
</h2>

<table class="table table-striped table-condensed">
	<tr>
		<th>Name</th>
		<th>Group</th>
		<th>Description</th>
		<th>Price</th>
    <th>Bill Frequency</th>
		<th>Trial days</th>
    <th>Status</th>
		<th>&nbsp;</th>
	</tr>
	<% @packages.each do |pkg| %>
	<tr>
		<td><%= link_to pkg.name, admin_billing_package_path(pkg) %></td>
		<td><%= pkg.group %></td>
		<td><%= pkg.description[0..40] %> ... </td>
		<td><%= number_to_currency(pkg.price) %> /mo.</td>
        <td><%= pkg.bill_frequency %> days</td>
		<td>
			<% if pkg.trial_days %>
			<%= pkg.trial_days %> days
			<% else %>
			-
			<% end %>
    </td>
    <td>
        <% if pkg.active %>
          <span class="label label-success">active</span>
        <% else %>
           <span class="label label-danger">inactive</span>
        <% end %>
    </td>
		<td>
			<%= link_to "edit", edit_admin_billing_package_path(pkg) %> &nbsp;
			<%= link_to "delete", 
						  { action: "destroy", id: pkg.id }, 
						  method: :delete, 
						  data: { confirm: "Are you sure?" } %>
		</td>
	</tr>
	<% end %>
</table>


<% content_for :title do %>
    Billing Packages
<% end %>


<% content_for :menu do
    render "admin/shared/billing_menu"
end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">Billing</a></li>
	<li class="active">Packages</li>
<% end %>
