<h2>
  <%= link_to "edit", edit_admin_billing_package_path(@package), class: "btn btn-sm btn-default pull-right" %>
  <i class="icon-tags"></i>&nbsp; <%= @package.name %></h2>
<hr/>


<div class="arow">
  <div class="col-md-9">

    <h4>Summary</h4>
    <table class="table table-condensed table-bordered summary">
      <tr>
        <td>Name</td>
        <td><%= @package.name %></td>
      </tr>
      <tr>
        <td>Price</td>
        <td><%= number_to_currency(@package.price) %></td>
      </tr>
      <tr>
        <td>Bill Frequency</td>
        <td><%= @package.bill_frequency %> days</td>
      </tr>
      <tr>
        <td>Trial Days</td>
        <td><%= @package.trial_days %> days</td>
      </tr>
      <tr>
        <td>Status</td>
        <td><%= @package.active %></td>
      </tr>
      <tr>
        <td>Hidden</td>
        <td><%= @package.hidden %></td>
      </tr>
    </table>

    <h4>Services</h4>
    <table class="table table-striped table-condensed">
      <tr>
        <th>Service Type</th>
        <th>Quantity</th>
        <th class="calign">Trial Days</th>
        <th>Rate</th>
        <th>Hidden</th>
      </tr>
      <% @package.details.each do |pd| %>
          <tr>
            <td><%= pd.service_type.name %></td>
            <td><%= pd.quantity %></td>
            <td class="calign">
              <% if pd.trial_days %>
                <%= pd.trial_days %> days
              <% else %>
                n/a
              <% end %>
            </td>
            <td><%= number_to_currency(pd.rate) %></td>
            <td><%= tick pd.hidden %></td>
          </tr>
      <% end %>
    </table>

  </div>


  <div class="col-md-3">
    <% unless @package.image_path.blank? %>
        <a href="<%= cdn_image_url @package.image_path, 700, 600, 0 %>" class="fancybox" rel="gallery">
          <img src="<%= cdn_image_url @package.image_path, 200, 200, 2 %>" class="img-polaroid" />
        </a>
    <% end %>

    <% count = UserPackage.where(recurr_status: 'A', package_id: @package.id).count %>

    <h5>Active Subscribers: <%= count %></h5>
  </div>

</div>  <!-- row -->


<%= content_for :title do %>
    <%= @package.name %>
<% end %>


<% content_for :menu do
  render "admin/shared/billing_menu"
end %>


<% content_for :breadcrumbs do %>
    <li><a href="#">Billing</a></li>
    <li><%= link_to "Packages", admin_billing_packages_path %></li>
    <li class="active"><%= @package.name %></li>
<% end %>
