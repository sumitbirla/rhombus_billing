<%= link_to new_admin_billing_service_type_path, class: 'btn btn-sm btn-default pull-right' do %>
  <i class="fa fa-plus"></i> New service type
<% end %>
<h2><%= current_domain %> Service Types</h2>

<%= will_paginate @service_types %>
<table class="table table-striped table-condensed">
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Quantity type</th>
    <th>Bill frequency</th>
    <th>Add-on ?</th>
    <th>&nbsp;</th>
  </tr>
  <% @service_types.each do |svc| %>
    <tr>
      <td><%= svc.code %>
      <td><%= link_to svc.name, edit_admin_billing_service_type_path(svc) %></td>
      <td><%= svc.quantity_type %>
      <td><%= svc.bill_frequency %>
      <td><%= raw tick(svc.add_on) %>
      <td>
        <%= link_to "edit", edit_admin_billing_service_type_path(svc) %> &nbsp;
        <%= link_to "delete",
                    {action: "destroy", id: svc.id},
                    method: :delete,
                    data: {confirm: "Are you sure?"} %>
      </td>
    </tr>
  <% end %>
</table>


<%= render 'admin/shared/table_summary', data: @service_types %>


<% content_for :title do %>
  Billing Service Types
<% end %>


<% content_for :breadcrumbs do %>
  <li><a href="#">Billing</a></li>
  <li class="active">Service Types</li>
<% end %>