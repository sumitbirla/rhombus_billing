<h2>
  <%= link_to "new card", new_admin_billing_payment_method_path, class: 'btn btn-sm btn-default pull-right' %>
  <i class="fa fa-credit-card"></i> &nbsp;Payment Methods
</h2>

<table class="table table-striped table-condensed">
  <tr>
    <th>Card Holder</th>
    <th>Number</th>
    <th>Brand</th>
    <th>Expiration</th>
    <th>Last Transaction</th>
    <th>Result</th>
    <th>Attempts</th>
    <th>Default ?</th>
    <th>&nbsp;</th>
  </tr>
  <% @payment_methods.each do |pm| %>
      <tr>
        <td><%= link_to pm.cardholder_name, admin_system_user_path(pm.user_id) %></td>
        <td><%= pm.card_display %></td>
        <td><%= pm.card_brand.titlecase %></td>
        <td><%= pm.expiration_month %>/<%= pm.expiration_year %></td>
        <td>
         <% if pm.last_transaction_date %>
          <%= systime pm.last_transaction_date %>
         <% else %>
           -
         <% end %>
        </td>
        <td><%= pm.last_transaction_result %></td>
        <td><%= pm.bill_attempts %></td>
        <td><%= tick pm.default %></td>
        <td>
          <%= link_to "delete",
                      { action: "destroy", id: pm.id },
                      method: :delete,
                      data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
  <% end %>
</table>


<% content_for :title do %>
    Payment Methods
<% end %>


<% content_for :menu do
  render "admin/shared/billing_menu"
end %>


<% content_for :breadcrumbs do %>
    <li><a href="#">Billing</a></li>
    <li class="active">Payment Methods</li>
<% end %>