<%= link_to "edit", edit_admin_billing_user_package_path(@user_package), class: "btn btn-sm btn-default pull-right" %>
<h2>Subscription #<%= @user_package.id %></h2>
<hr/>

<div class="arow">
  <div class="col-md-9">

    <h4>Summary</h4>
    <table class="table table-condensed table-bordered summary">
      <tr>
        <td>Customer</td>
        <td><%= link_to @user_package.user.name, admin_system_user_path(@user_package.user) %></td>
      </tr>
      <tr>
        <td>Package</td>
        <td><%= @user_package.package.name %></td>
      </tr>
      <tr>
        <td>Rate</td>
        <td><%= number_to_currency(@user_package.rate) %></td>
      </tr>
      <tr>
        <td>Recurr Status</td>
        <td><%= @user_package.recurr_status %></td>
      </tr>
      <tr>
        <td>Recurr Date</td>
        <td><%= @user_package.recurr_date %></td>
      </tr>
      <tr>
        <td>Bill Attempts</td>
        <td><%= @user_package.bill_attempts %></td>
      </tr>
    </table>

    <h4>Services</h4>
    <table class="table table-striped table-condensed">
      <tr>
        <th>Service Type</th>
        <th>Included</th>
        <th>Available</th>
        <th>Rate</th>
      </tr>
      <% @user_package.services.each do |svc| %>
          <tr>
            <td><%= svc.service_type.name %></td>
            <td><%= svc.include_quantity %></td>
            <td><%= svc.available_quantity %></td>
            <td>
              <% if svc.rate %>
                  <%= number_to_currency(svc.rate) %>
              <% else %>
                  - included -
              <% end %>
            </td>
          </tr>
      <% end %>
    </table>


    <h4>Payments</h4>
    <table class="table table-striped table-condensed">
      <tr>
        <th>ID</th>
        <th>Date</th>
        <th>Memo</th>
        <th>Amount</th>
      </tr>
      <% @user_package.payments.order('created_at DESC').where('amount > 0.0').each do |payment| %>
          <tr>
            <td><%= payment.id %></td>
            <td><%= systime payment.created_at %></td>
            <td><%= payment.memo %></td>
            <td><%= number_to_currency(payment.amount) %></td>
          </tr>
      <% end %>
    </table>

  </div>


  <div class="col-md-3">
    <% unless @user_package.package.image_path.blank? %>
        <a href="<%= cdn_image_url @user_package.package.image_path, 700, 600, 0 %>" class="fancybox" rel="gallery">
          <img src="<%= cdn_image_url @user_package.package.image_path, 200, 200, 2 %>" class="img-polaroid" />
        </a>
    <% end %>
  </div>

</div>  <!-- row -->


<%= content_for :title do %>
    <%= "Subscription ##{@user_package.id}" %>
<% end %>


<% content_for :menu do
  render "admin/shared/billing_menu"
end %>


<% content_for :breadcrumbs do %>
    <li><a href="#">Billing</a></li>
    <li><%= link_to "Subscriptions", admin_billing_user_packages_path %></li>
    <li class="active">Subscription #<%= @user_package.id %></li>
<% end %>
